    <children>
        <Label layoutX="158.0" layoutY="94.0" text="ADMINISTRATOR LOGIN" textFill="#0d0040">
            <font>
                <Font name="Franklin Gothic Heavy" size="26.0" />
            </font>
        </Label>
        <TextField fx:id="unameTextField" layoutX="223.0" layoutY="163.0" prefHeight="25.0" prefWidth="221.0" />
        <PasswordField fx:id="passTextField" layoutX="223.0" layoutY="197.0" prefHeight="25.0" prefWidth="221.0" />
        <Button fx:id="loginButton" layoutX="398.0" layoutY="247.0" mnemonicParsing="false" onAction="#loginButton_CLick" text="Login" />
