        <Label focusTraversable="false" layoutX="159.0" layoutY="200.0" text="Password">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Label focusTraversable="false" layoutX="157.0" layoutY="166.0" text="Username">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Label fx:id="errorLabel" layoutX="223.0" layoutY="222.0" text="Incorrect Username or Password" textFill="RED" visible="false">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
